	"tabBar": {
		"backgroundColor": "#ffffff",
		"color": "#949494",
		"selectedColor": "#29B7CB",
		"fontSize": "16px",
		"list": [{
				"pagePath": "pages/tabbar/index",
				"text": "首页"
			},
			{
				"pagePath": "pages/tabbar/circle",
				"text": "广场"
			},
			{
				"pagePath": "pages/tabbar/notice",
				"text": "消息"
			},
			{
				"pagePath": "pages/tabbar/mine",
